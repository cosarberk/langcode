
{
    "compilerOptions": {
      "target": "es2017",
      "module": "CommonJS",
      "rootDir": ".",         
      "outDir": "dist",      
      "moduleResolution": "Node", 
      "baseUrl": ".",        
      "paths": {
        "@/*": ["src/*"]   
      },
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["**/*.ts"], 
    "exclude": ["node_modules", "dist"]
  }